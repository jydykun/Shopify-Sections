{% stylesheet %}
.jdslider[data-tier="basic"] {
  height: 600px;
  position: relative;
  font-size: 18px;

  .jdslider__slide--empty {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: inherit;
    font-size: 1.5rem;
    color: #666;
    background-color: #b4b4b4;
  }

  /* =====================
     Wrapper / Slides
  ====================== */
  .jdslider__wrapper {
    height: 100%;
  }

  .jdslider__slide {
    position: relative;
    padding: 0 40px;
  }

  .jdslider__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: -1;
  }

  .jdslider__slide-wrapper {
    height: inherit;
    display: flex;
    justify-content: center;
  }

  .jdslider__nav-button {
    color: #007AFF;
    scale: 1;
  }

  /* =====================
     Content
  ====================== */
  .jdslider__content {
    height: inherit;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 25px;
    text-align: center;
  }

  .jdslider__heading {
    font-size: 3rem;
    line-height: normal;
  }

  .jdslider__desc {
    max-width: 37.5rem;
  }

  /* =====================
     Buttons
  ====================== */
  .jdslider__button-wrapper {
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    gap: 10px;
  }

  .jdslider__button {
    position: relative;
    display: inline-block;
    padding: 15px 30px;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
    overflow: hidden;
    z-index: 0;

    &:hover > .jdslider__button-hover {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .jdslider__button-hover {
    position: absolute;
    inset: 0;
    opacity: 0;
    transform: translateY(100%);
    transition: all 0.3s ease-in-out;
    z-index: -1;
  }

  /* =====================
     Responsive
  ====================== */
  @media (min-width: 768px) {
    font-size: 20px;

    .jdslider__slide-wrapper {
      max-width: 1280px;
      margin: 0 auto;
    }

    .jdslider__content {
      gap: 35px;
    }

    .jdslider__button-wrapper {
      gap: 20px;
    }
  }
}
{% endstylesheet %}
