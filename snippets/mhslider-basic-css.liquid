{% stylesheet %}
.mhslider[data-tier="basic"] {
  height: 600px;
  position: relative;
  font-size: 18px;

  /* =====================
     Wrapper / Slides
  ====================== */
  .mhslider__wrapper {
    height: 100%;
  }

  .mhslider__slide {
    position: relative;
    padding: 0 40px;
  }

  .mhslider__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: -1;
  }

  .mhslider__slide-wrapper {
    height: inherit;
    display: flex;
    justify-content: center;
  }

  /* =====================
     Content
  ====================== */
  .mhslider__content {
    height: inherit;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 25px;
    text-align: center;
  }

  .mhslider__item {
    margin: 0;
    opacity: 0;
    transition: all 1s ease;

    &.mhslider__item--show-up {
      transform: translateY(40px);
    }

    &.is-active {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .mhslider__heading {
    font-size: 3rem;
    line-height: normal;
  }

  .mhslider__desc {
    max-width: 37.5rem;
  }

  /* =====================
     Buttons
  ====================== */
  .mhslider__button-wrapper {
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    gap: 10px;
  }

  .mhslider__button {
    position: relative;
    display: inline-block;
    padding: 15px 30px;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
    overflow: hidden;
    z-index: 0;

    &:hover > .mhslider__button-hover {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .mhslider__button-hover {
    position: absolute;
    inset: 0;
    opacity: 0;
    transform: translateY(100%);
    transition: all 0.3s ease-in-out;
    z-index: -1;
  }

  /* =====================
     Pagination
  ====================== */
  .mhslider__pagination {
    display: flex;
    justify-content: center;
    gap: 15px;
    position: absolute;
    inset-inline: 0;
    inset-block-end: 20px;

    &.mhslider__pagination-bullet--clickable
      > .mhslider__pagination-bullet {
      cursor: pointer;
    }
  }

  .mhslider__pagination-bullet {
    width: 15px;
    opacity: 0.5;

    &.mhslider__pagination-bullet--active {
      transform: scale(1.2);
      transition: transform 0.3s ease-in-out;
      opacity: 1;
    }
  }

  .mhslider__pagination-bullet-circle {
    fill: #fff;
    fill-opacity: 0.5;
    stroke: #fff;
    stroke-width: 3;
    stroke-dasharray: 0 62.83 0;
    stroke-opacity: 0;
    transform: rotate(-90deg);
    transform-origin: center;
  }

  .mhslider__pagination-bullet--active
  .mhslider__pagination-bullet-circle {
    stroke-opacity: 1;
  }

  /* =====================
     Responsive
  ====================== */
  @media (min-width: 768px) {
    font-size: 20px;

    .mhslider__slide-wrapper {
      max-width: 1280px;
      margin: 0 auto;
    }

    .mhslider__content {
      gap: 35px;
    }

    .mhslider__button-wrapper {
      gap: 20px;
    }
  }
}
{% endstylesheet %}
