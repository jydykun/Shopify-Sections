{% stylesheet %}
.jdslider[data-tier="standard"] {
  height: 600px;
  position: relative;
  font-size: 18px;

  .jdslider__slide--empty {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: inherit;
    font-size: 1.5rem;
    color: #666;
  }

  /* =====================
     Wrapper / Slides
  ====================== */
  .jdslider__wrapper {
    height: 100%;
  }

  .jdslider__slide {
    position: relative;
    padding: 0 40px;
  }

  .jdslider__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: -1;
  }

  .jdslider__slide-wrapper {
    height: inherit;
    display: flex;
    justify-content: center;
  }

  .jdslider__button-next,
  .jdslider__button-prev {
    color: #007aff;
    scale: 1;
  }
  /* =====================
     Content
  ====================== */
  .jdslider__content {
    height: inherit;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 25px;
    text-align: center;
  }

  .jdslider__heading {
    font-size: 3rem;
    line-height: normal;
  }

  .jdslider__desc {
    max-width: 37.5rem;
  }

  /* =====================
     Buttons
  ====================== */
  .jdslider__button-wrapper {
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    gap: 10px;
  }

  .jdslider__button {
    position: relative;
    display: inline-block;
    padding: 15px 30px;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
    overflow: hidden;
    z-index: 0;

    &:hover > .jdslider__button-hover {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .jdslider__button-hover {
    position: absolute;
    inset: 0;
    opacity: 0;
    transform: translateY(100%);
    transition: all 0.3s ease-in-out;
    z-index: -1;
  }

  /* =====================
     Pagination
  ====================== */
  .jdslider__pagination {
    display: flex;
    justify-content: center;
    gap: 15px;
    inset-block-end: 35px;

    &.jdslider__pagination-bullet--clickable
      > .jdslider__pagination-bullet {
      cursor: pointer;
    }
  }

  .jdslider__pagination-bullet {
    width: 15px;
    opacity: 0.5;

    &.jdslider__pagination-bullet--active {
      transform: scale(1.2);
      transition: transform 0.3s ease-in-out;
      opacity: 1;
    }
  }

  .jdslider__pagination-bullet-ring {
    fill: #fff;
    fill-opacity: 0.5;
    stroke: #fff;
    stroke-width: 3;
    stroke-dasharray: 0 62.83 0;
    stroke-opacity: 0;
    transform: rotate(-90deg);
    transform-origin: center;
  }

  .jdslider__pagination-bullet--active
  .jdslider__pagination-bullet-ring {
    stroke-opacity: 1;
  }

  /* =====================
     Responsive
  ====================== */
  @media (min-width: 768px) {
    font-size: 20px;

    .jdslider__slide-wrapper {
      max-width: 1280px;
      margin: 0 auto;
    }

    .jdslider__content {
      gap: 35px;
    }

    .jdslider__button-wrapper {
      gap: 20px;
    }
  }
}
{% endstylesheet %}
