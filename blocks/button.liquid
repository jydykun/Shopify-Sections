<!--BUTTON BLOCK-->
<a href="{{ block.settings.button_link }}" id="block-{{ block.id }}" class="block-btn" {{ block.shopify_attributes }}>
    {{ block.settings.button_label}}
</a>

{% style %}
#block-{{ block.id }} {
    --padding-x: {{ block.settings.padding_horizontal }}px;
    --padding-y: {{ block.settings.padding_vertical }}px;
    --border-width: {{ block.settings.border_width }}px;
    --border-color: {{ block.settings.color_scheme.settings.border_color }};
    --border-radius: {{ block.settings.border_radius }}px;
    --label-color:{{ block.settings.color_scheme.settings.button_label }};
    --bg-color:
        {% if block.settings.color_scheme.settings.button_bg_gradient != blank %}
            {{ block.settings.color_scheme.settings.button_bg_gradient }};
        {% else %}
            {{ block.settings.color_scheme.settings.button_bg_color }};
        {% endif %}
    --hover-bg-color: {{ block.settings.color_scheme.settings.hover_bg_color }};
    --hover-label-color: {{ block.settings.color_scheme.settings.hover_label_color }};
}
{% endstyle %}

{% stylesheet %}
.block-btn {
    display: inline-block;
    padding: var(--padding-y) var(--padding-x);
    color: var(--label-color);
    border: var(--border-width) solid var(--border-color);
    border-radius: var(--border-radius);
    background-color: var(--bg-color);
    transition: all 0.3s ease-in-out;
    &:hover {
        color: var(--hover-label-color);
        background-color: var(--hover-bg-color);
    }
}
{% endstylesheet %}


{% schema %}
{
    "name": "Button",
    "settings": [
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Scheme"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Button"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Link"
        },
        {
            "type": "header",
            "content": "Padding"
        },
        {
            "type": "range",
            "id": "padding_vertical",
            "min": 5,
            "max": 30,
            "step": 1,
            "unit": "px",
            "default": 15,
            "label": "Vertical",
        },
        {
            "type": "range",
            "id": "padding_horizontal",
            "min": 5,
            "max": 50,
            "step": 1,
            "unit": "px",
            "default": 25,
            "label": "Horizontal",
        },
        {
            "type": "header",
            "content": "Border"
        },
        {
            "type": "range",
            "id": "border_width",
            "min": 1,
            "max": 5,
            "step": 1,
            "unit": "px",
            "default": 2,
            "label": "Border Width",
        },
        {
            "type": "range",
            "id": "border_radius",
            "min": 0,
            "max": 50,
            "step": 1,
            "unit": "px",
            "default": 10,
            "label": "Border Radius",
        }
        
    ],
    "presets": [{"name": "Button"}]
}
{% endschema %}