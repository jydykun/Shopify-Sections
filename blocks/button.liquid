<button class="mh-slider__btn b"
    style="
        --width:{{ block.settings.button_width }}%;
        --padding-x:{{ block.settings.padding_horizontal }}px;
        --padding-y:{{ block.settings.padding_vertical }}px;
        --border-width:{{ block.settings.border_width }}px;
        --border-color:{{ block.settings.color_scheme.settings.button_outline }};
        --border-radius:{{ block.settings.border_radius }}px;
        --text-color:{{ block.settings.color_scheme.settings.button_label }};
        --bg-color:{{ block.settings.color_scheme.settings.button }};
    ">
    {{ block.settings.button_label}}
</button>

{% stylesheet %}
    .b {
        border: 1px solid red;
    }
    .mh-slider__btn {
        padding: var(--padding-y) var(--padding-x);
        color: var(--text-color);
        border: var(--border-width) solid var(--border-color);
        border-radius: var(--border-radius);
        background-color: var(--bg-color);
        cursor: pointer;
        &:hover {
            background-color: red;
        }
    }
{% endstylesheet %}

{% schema %}
{
    "name": "Button Block",
    "settings": [
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Scheme"
        },
        {
            "type": "inline_richtext",
            "id": "button_label",
            "label": "Button Label",
            "default": "Button"
        },
        {
            "type": "header",
            "content": "Padding"
        },
        {
            "type": "range",
            "id": "padding_vertical",
            "min": 5,
            "max": 30,
            "step": 1,
            "unit": "px",
            "default": 15,
            "label": "Vertical",
        },
        {
            "type": "range",
            "id": "padding_horizontal",
            "min": 5,
            "max": 100,
            "step": 1,
            "unit": "px",
            "default": 25,
            "label": "Horizontal",
        },
        {
            "type": "header",
            "content": "Border"
        },
        {
            "type": "range",
            "id": "border_width",
            "min": 1,
            "max": 5,
            "step": 1,
            "unit": "px",
            "default": 2,
            "label": "Border Width",
        },
        {
            "type": "range",
            "id": "border_radius",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%",
            "default": 5,
            "label": "Border Radius",
        }
        
    ],
    "presets": [{"name": "Button Block"}]
}
{% endschema %}