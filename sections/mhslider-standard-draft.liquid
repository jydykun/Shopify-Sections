{% comment %}
<div class="swiper mhslider" data-tier="standard"
  {% if section.settings.mhslider_autoplay %}
    data-autoplay="{{ section.settings.mhslider_autoplay_delay }}"
  {% endif %}
  data-nav-arrows="{{ section.settings.mhslider_navigation }}"
  data-effect="{{ section.settings.mhslider_effect }}"
>
  <div class="swiper-wrapper mhslider__wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide mhslider__slide mhslider__slide--{{ block.id }}">
        {% if block.settings.slide_image != blank %}
          {{ block.settings.slide_image | image_url: width: 1280 | image_tag: class: 'mhslider__image' }}
        {% endif %}
        <div class="mhslider__slide-wrapper mhslider__slide-wrapper--{{ block.settings.position }}">
          <article class="mhslider__content mhslider__content--{{ block.settings.alignment }}">
            <div class="mhslider__item mhslider__item--show-up">
              <h2 class="mhslider__heading mhslider__heading--{{ block.id }}">{{ block.settings.heading }}</h2>
            </div>
            <div class="mhslider__item mhslider__item--show-up">
              <p class="mhslider__desc mhslider__desc--{{ block.id }}">{{ block.settings.desc }}</p>
            </div>
            <div class="mhslider__item mhslider__item--show-up">
              <div class="mhslider__button-wrapper">
                <a
                  class="mhslider__button mhslider__button--primary-{{ block.id }}"
                  href="{{ block.settings.primary_button_link }}"
                >
                  <span class="mhslider__button-label">{{ block.settings.primary_button_label }}</span>
                  <span class="mhslider__button-hover mhslider__button-hover--primary"></span>
                </a>
                {% if block.settings.add_secondary_button %}
                  <a
                    class="mhslider__button mhslider__button--secondary-{{ block.id }}"
                    href="{{ block.settings.secondary_button_link }}"
                  >
                    <span class="mhslider__button-label">{{ block.settings.secondary_button_label }}</span>
                    <span class="mhslider__button-hover mhslider__button-hover--secondary"></span>
                  </a>
                {% endif %}
              </div>
            </div>
          </article>
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- NAVIGATION BUTTONS -->
  <div class="mhslider__controls">
    <div class="mhslider__controls-wrapper">
      {% if section.settings.mhslider_navigation %}
        <div class="mhslider__button-prev">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.414,10.586,13.121,6.293,11.707,7.707,15,11H5v2H15l-3.293,3.293,1.414,1.414,4.293-4.293A2,2,0,0,0,17.414,10.586Z"/>
          </svg>
        </div>
      {% endif %}

      <div class="mhslider__pagination"></div>

      {% if section.settings.mhslider_navigation %}
        <div class="mhslider__button-next">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.414,10.586,13.121,6.293,11.707,7.707,15,11H5v2H15l-3.293,3.293,1.414,1.414,4.293-4.293A2,2,0,0,0,17.414,10.586Z"/>
          </svg>
        </div>
      {% endif %}
    </div>
  </div>

</div>

{% render 'mhslider-standard-css' %}
{% render 'mhslider-standard-js' %}

{% style %}
.mhslider[data-tier="standard"] {
  {% for block in section.blocks %}
    .mhslider__slide--{{ block.id }} {
      background: {{ block.settings.background }};
    }
    .mhslider__heading--{{ block.id }} {
      color: {{ block.settings.heading_color }};
    }
    .mhslider__desc--{{ block.id }} {
      color: {{ block.settings.desc_color }};
    }
    .mhslider__button--primary-{{ block.id }} {
      color: {{ block.settings.primary_label_color }};
      background: {{ block.settings.primary_label_bg }};
      &:hover {
        color: {{ block.settings.primary_label_hvrcolor }};
      }
      &:hover > .mhslider__button-hover--primary {
        background: {{ block.settings.primary_label_hvrbg }};
      }
    }
    .mhslider__button--secondary-{{ block.id }} {
      color: {{ block.settings.secondary_label_color }};
      background: {{ block.settings.secondary_label_bg }};
      &:hover {
        color: {{ block.settings.secondary_label_hvrcolor }};
      }
      &:hover > .mhslider__button-hover--secondary {
        background: {{ block.settings.secondary_label_hvrbg }};
      }
  }
  {% endfor %}

  /* =====================
    NAVIGATION
  ====================== */

  {% if section.settings.mhslider_navigation == false %}
    .mhslider__controls-wrapper {
      background: none;
    }
  {% else %}
    .mhslider__controls-wrapper {
      background-color: {{ section.settings.mhslider_control_bgcolor }};
    }
    .mhslider__button-prev,
    .mhslider__button-next {
      color: {{ section.settings.mhslider_control_icon_color }};
    }
    .mhslider__pagination-bullet-circle {
      fill: {{ section.settings.mhslider_control_icon_color }};
      stroke: {{ section.settings.mhslider_control_icon_color }};
      {% if section.settings.mhslider_pagination_indicator == false %}
        stroke-width: 0;
      {% endif %}
    }
  {% endif %}

  /* =====================
    RESPONSIVE
  ====================== */

  @media (min-width: 768px) {
    .mhslider__slide-wrapper--left {
      justify-content: flex-start;
    }
    .mhslider__slide-wrapper--center {
      justify-content: center;
    }
    .mhslider__slide-wrapper--right {
      justify-content: flex-end;
    }
    .mhslider__content--left {
      text-align: left;
      align-items: flex-start;
    }
    .mhslider__content--center {
      text-align: center;
      align-items: center;
    }
    .mhslider__content--right {
      text-align: right;
      align-items: flex-end;
    }
    .mhslider__controls {
      width: {{ section.settings.mhslider_control_width }}%;
    }
  }
}
{% endstyle %}


{% schema %}
{
  "name": "MHSlider-Standard",
  "limit": 1,
  "settings": [
    {
      "type": "select",
      "id": "mhslider_effect",
      "label": "Effect",
      "options": [
        {
          "value": "slide",
          "label": "Slide"
        },
        {
          "value": "fade",
          "label": "Fade"
        },
      ],
      "default": "slide"
    },
    {
      "type": "header",
      "content": "Autoplay"
    },
    {
      "type": "checkbox",
      "id": "mhslider_autoplay",
      "label": "Enable Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "mhslider_autoplay_delay",
      "label": "Delay",
      "min": 2500,
      "max": 5000,
      "step": 500,
      "unit": "ms",
      "default": 3000,
      "visible_if": "{{ section.settings.mhslider_autoplay }}"
    },
    {
      "type": "header",
      "content": "Controls"
    },
    {
      "type": "checkbox",
      "id": "mhslider_navigation",
      "label": "Enable Navigation Arrows",
      "default": true
    },
    {
      "type": "range",
      "id": "mhslider_control_width",
      "label": "Width",
      "min": 25,
      "max": 50,
      "step": 1,
      "unit": "%",
      "default": 30,
      "visible_if": "{{ section.settings.mhslider_navigation }}"
    },
    {
      "type": "color",
      "id": "mhslider_control_bgcolor",
      "label": "Background Color",
      "default": "#FFFFFF3B",
      "alpha": true,
      "visible_if": "{{ section.settings.mhslider_navigation }}"
    },
    {
      "type": "color",
      "id": "mhslider_control_icon_color",
      "label": "Controls Color",
      "default": "#FFFFFF",
      "visible_if": "{{ section.settings.mhslider_navigation }}"
    },
    {
      "type": "checkbox",
      "id": "mhslider_pagination_indicator",
      "label": "Enable Pagination Indicator",
      "default": true
    },
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "header",
          "content": "Background"
        },
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Background Image",
          "info": "Recommended size: 1280px wide. Image will be cropped to fit the slide."
        },
        {
          "type": "color_background",
          "id": "background",
          "label": "Background Color",
          "default": "linear-gradient(#EDEDED, #CECECE)",
          "info": "Used as the background when no image is added."
        },
        {
          "type": "header",
          "content": "Texts"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Lorem Ipsum"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Color",
          "default": "#252525"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "Description",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla at ullamcorper arcu. Morbi mattis mi mollis arcu ullamcorper, nec elementum odio vehicula."
        },
        {
          "type": "color",
          "id": "desc_color",
          "label": "Color",
          "default": "#252525"
        },
        {
          "type": "text_alignment",
          "id": "alignment",
          "label": "Text Alignment",
          "default": "center"
        },
        {
          "type": "text_alignment",
          "id": "position",
          "label": "Position",
          "default": "center"
        },
        {
          "type": "header",
          "content": "Primary Button"
        },
        {
          "type": "text",
          "id": "primary_button_label",
          "label": "Label",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "primary_button_link",
          "label": "Link"
        },
        {
          "type": "color",
          "id": "primary_label_color",
          "label": "Label Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "primary_label_bg",
          "label": "Background Color",
          "default": "#0051CA"
        },
        {
          "type": "color",
          "id": "primary_label_hvrcolor",
          "label": "Hover Label Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "primary_label_hvrbg",
          "label": "Hover Background Color",
          "default": "#0041a3"
        },
        {
          "type": "checkbox",
          "id": "add_secondary_button",
          "label": "Add a secondary button",
          "default": false
        },
        {
          "type": "header",
          "content": "Secondary Button",
          "visible_if": "{{ block.settings.add_secondary_button }}"
        },
        {
          "type": "text",
          "id": "secondary_button_label",
          "label": "Label",
          "default": "Button",
          "visible_if": "{{ block.settings.add_secondary_button }}"
        },
        {
          "type": "url",
          "id": "secondary_button_link",
          "label": "Link",
          "visible_if": "{{ block.settings.add_secondary_button }}"
        },
        {
          "type": "color",
          "id": "secondary_label_color",
          "label": "Label Color",
          "default": "#ffffff",
          "visible_if": "{{ block.settings.add_secondary_button }}"
        },
        {
          "type": "color",
          "id": "secondary_label_bg",
          "label": "Background Color",
          "default": "#0051CA",
          "visible_if": "{{ block.settings.add_secondary_button }}"
        },
        {
          "type": "color",
          "id": "secondary_label_hvrcolor",
          "label": "Hover Label Color",
          "default": "#ffffff",
          "visible_if": "{{ block.settings.add_secondary_button }}"
        },
        {
          "type": "color",
          "id": "secondary_label_hvrbg",
          "label": "Hover Background Color",
          "default": "#0041a3",
          "visible_if": "{{ block.settings.add_secondary_button }}"
        }
      ]
    }
  ],
}
{% endschema %}
 {% endcomment %}
