<section class="swiper mh-slider">
  <div class="swiper-wrapper mh-slider__wrapper">
    {% content_for 'blocks' %}
  </div>
  
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</section>


{% stylesheet %}
/*
